{
  "name": "@kronos-integration/svelte-components",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "svelte": "./src/index.svelte",
  "description": "Svelte components for Kronos",
  "keywords": [
    "component",
    "kronos-integration",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --page-request-timeout 9000 --app-init-delay 3000 --app vite",
    "docs": "documentation readme --section=API ./src/**/*.mjs && documentation readme --section=API {{javascript.source}}",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs && documentation lint {{javascript.source}}",
    "preview": "vite preview"
  },
  "dependencies": {
    "@kronos-integration/endpoint": "^9.4.32",
    "@kronos-integration/service": "^10.4.26",
    "svelte-guard-history-router": "^4.6.23"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-virtual": "^2.1.0",
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "documentation": "^13.2.5",
    "rollup": "^2.75.7",
    "rollup-plugin-dev": "^2.0.0",
    "semantic-release": "^19.0.3",
    "svelte": "^3.49.0",
    "testcafe": "^1.19.0",
    "vite": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/svelte-components.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/svelte-components/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/svelte-components#readme",
  "pkgbuild": {
    "http.base.path": "/examples",
    "groups": "examples"
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-component#next"
    ]
  }
}
