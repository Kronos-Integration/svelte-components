{
  "name": "@kronos-integration/svelte-components",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "svelte": "./src/index.svelte",
  "description": "Svelte components for Kronos",
  "keywords": [
    "component",
    "kronos-integration",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --page-request-timeout 3000 --app-init-delay 3000 --app \"vite preview\"",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs}",
    "preview": "vite preview"
  },
  "dependencies": {
    "@kronos-integration/endpoint": "^9.4.36",
    "@kronos-integration/service": "^10.4.35",
    "svelte-guard-history-router": "^5.5.11"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "documentation": "^14.0.0",
    "npm-pkgbuild": "^10.14.8",
    "semantic-release": "^19.0.3",
    "svelte": "^3.49.0",
    "testcafe": "^2.0.0",
    "vite": "^3.0.8"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.7.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/svelte-components.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/svelte-components/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/svelte-components#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "groups": "examples",
    "name": "kronos-svelte-components"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-pacman",
      "arlac77/template-svelte-component"
    ]
  }
}
