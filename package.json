{
  "name": "@kronos-integration/svelte-components",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "svelte": "./src/index.svelte",
  "description": "Svelte components for Kronos",
  "keywords": [
    "component",
    "kronos-integration",
    "svelte",
    "web"
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "start": "rollup -c tests/app/rollup.config.mjs -w",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --app-init-delay 1000 --app \"rollup -c tests/app/rollup.config.mjs -w\"",
    "docs": "documentation readme ./src/index.svelte --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/index.svelte"
  },
  "dependencies": {
    "@kronos-integration/endpoint": "^9.2.15",
    "@kronos-integration/service": "^9.2.24",
    "svelte-guard-history-router": "^4.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-virtual": "^2.0.3",
    "documentation": "github:arlac77/documentation",
    "rollup": "^2.33.3",
    "rollup-plugin-dev": "^1.1.2",
    "rollup-plugin-svelte": "^6.1.1",
    "semantic-release": "^17.3.0",
    "svelte": "^3.29.7",
    "testcafe": "^1.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/svelte-components.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/svelte-components/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/svelte-components#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-documentation",
      "arlac77/template-github",
      "arlac77/template-svelte-component"
    ]
  }
}
